#include <iostream>
#include <string>

using namespace std;

class BankAccount {
private:
    string customer_name;
    int account_number;
    char account_type;
    float balance;

public:
    // Constructor to initialize the balance with Rs. 500
    BankAccount(string name, int acc_no, char acc_type)
        : customer_name(name), account_number(acc_no), account_type(acc_type), balance(500) {}

    // Function to deposit an amount
    void deposit(float amount) {
        balance += amount;
        cout << "Amount deposited: " << amount << " Rs." << endl;
    }

    // Friend function to withdraw an amount after checking the balance
    friend void withdraw(BankAccount &account, float amount);

    // Function to display the account details
    void display_account_info() const {
        cout << "Customer Name: " << customer_name << endl;
        cout << "Account Number: " << account_number << endl;
        cout << "Account Type: " << account_type << endl;
        cout << "Balance: " << balance << " Rs." << endl;
    }
};

// Friend function to withdraw an amount after checking the balance
void withdraw(BankAccount &account, float amount) {
    if (amount > account.balance) {
        cout << "Insufficient balance!" << endl;
    } else {
        account.balance -= amount;
        cout << "Amount withdrawn: " << amount << " Rs." << endl;
    }
}

int main() {
    // Creating two BankAccount objects
    BankAccount account1("Alice", 101, 'S');
    BankAccount account2("Bob", 102, 'C');

    // Test deposit function
    account1.deposit(1000);
    account2.deposit(2000);

    // Test withdraw function
    withdraw(account1, 300);
    withdraw(account2, 2500);

    // Display account details
    cout << "\nAccount 1 Details:\n";
    account1.display_account_info();

    cout << "\nAccount 2 Details:\n";
    account2.display_account_info();

    return 0;
}

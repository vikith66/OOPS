#include<iostream>
using namespace std;
class matrix{
int row,col;
int arr[50][50];
public:
matrix(int m,int n):row(m),col(n){}
void getdata(){
for(int i=0;i<row;i++){
for(int j=0;j<col;j++){
cout<<"Enter "<<(i+1)<<" rows "<<(j+1)<<" element:";
cin>>arr[i][j];
cout<<endl;
}
}
}
void printdata(){
for(int i=0;i<row;i++){
for(int j=0;j<col;j++){
cout<<arr[i][j]<<" ";
}
cout<<endl;
}
}
matrix operator +(const matrix &m2) const{
matrix temp(row,col);
for(int i=0;i<row;i++){
for(int j=0;j<col;j++){
temp.arr[i][j]=arr[i][j]+m2.arr[i][j];
}
}
return temp;
}
matrix operator -(const matrix &m2) const{
matrix temp(row,col);
for(int i=0;i<row;i++){
for(int j=0;j<col;j++){
temp.arr[i][j]=arr[i][j]-m2.arr[i][j];
}
}
return temp;
}
int operator ==(matrix &m2){
if(row==m2.row && col==m2.col) return 1;
else return 0;
}
};
int main(){
int row,col;
cout<<"Enter the Row Matrix 1"<<endl;
cin>>row;
cout<<"Enter the Column matrix 1"<<endl;
cin>>col;
matrix m1(row,col);
cout<<"Enter the Row Matrix 2"<<endl;
cin>>row;
cout<<"Enter the Column matrix 2"<<endl;
cin>>col;
matrix m2(row,col);
if(m1==m2){
cout<<"Enter the values for 1st matrix:"<<endl;
m1.getdata();
cout<<"Enter the values for 2nd matrix:"<<endl;
m2.getdata();
matrix ans=m1+m2;
cout<<"Addition two matrix is:"<<endl;
ans.printdata();
ans=m1-m2;
cout<<"Substraction of two matrix is:"<<endl;
ans.printdata();
}else{
cout<<"Matrix operation cannot be performed"<<endl;
}
return 0;
}

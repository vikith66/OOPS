#include<iostream>
using namespace std;
class matrix{
        private:
                int row, col;
                int  data[50][50],result[50][50];
        public:
                matrix(int row,int col){
                        for(int i = 0;i < row;i++){
                                for(int j = 0; j < col; j++){
                                        data[i][j] = 0;
                                }
                        }
                }
                matrix operator ^(int num){
                        for(int i =0;i < row;i++){
                                for(int j = 0; j < col; j++){
                                        result[i][j] = data[i][j] + num;
                                }
                        }
                }
                void input(int row,int col){
                        for(int i = 0; i < row; i++){
                                for(int j = 0; j < col;j++){
                                        cout<<"Enter Element For "<<i<<j<<endl;
                                        cin>>data[i][j];
                                }
                        }
                }
                void display(int row,int col){
                        for(int i = 0; i < row; i++){
                                for(int j = 0; j < col;j++){
                                        cout<<result[i][j] << " ";
                                }
                                cout<<endl;
                        }
                }
};
int main(){
        int row,col,n;
        cout<<"Enter Number Of Rows :"<<endl;
        cin >> row;
        cout<<"Enter Number Of Columns :"<<endl;
        cin >> col;
        matrix m1(row,col);
        cout<<"Enter the Elements for The matrix :"<<endl;
        m1.input(row,col);
        cout<<"Enter The nth Power :"<<endl;
        cin >> n;
        matrix res(row,col);
